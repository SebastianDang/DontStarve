<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:background="@mipmap/notepad2"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:inputType="text"
        android:hint="@string/search_ingredients"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        />

    <Button
        android:id="@+id/search_add"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="@string/search_add_button"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/search_bar"
        android:layout_toEndOf="@+id/search_bar"
        android:layout_alignParentBottom="@+id/search_bar"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@+id/search_bar" />

    <ListView
        android:id="@+id/list_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:choiceMode="none"
        android:smoothScrollbar="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="false"
        android:dividerHeight="-9.50dp"
        android:paddingTop="3.0dp"
        android:layout_below="@+id/search_space" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Recipe"
        android:layout_marginBottom="45dp"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="350dp"
        android:layout_height="15dp"
        android:layout_below="@+id/search_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/search_space" />


</RelativeLayout>
